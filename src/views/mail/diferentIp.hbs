{{> header}}
            <h1>{{title}}</h1>

            <p>
              
                {{greetingBegin}} <span style="font-weight: 600;">{{name}}</span> <span style="font-weight: 600;">{{last_name}}</span>, {{greetingEnd}}
            </p>
            <p>
                {{messageBegin}} <span style="font-weight: 600;">{{ip}}</span>, {{messageMiddle}} <span style="font-weight: 600;">{{city}}</span>, <span style="font-weight: 600;">{{country}}</span>.
            </p>
         
            <img style="border-radius: 5px; border: solid 2px #385d88" src="{{mapUrl}}" alt="GMAPS">

         <div style="margin-top:5rem;width: 100%;text-align:center !important;">
            <a href="{{link}}" style="font-size: 14px;
                padding: 6px 12px;
                margin-bottom: 0;
                display: inline-block;
                text-decoration: none;
                text-align: center;
                white-space: nowrap;
                vertical-align: middle;
                -ms-touch-action: manipulation;
                touch-action: manipulation;
                background: #006400;
                color: white;
                border-radius: 5px;
                cursor: pointer;
                -webkit-user-select: none;
                -moz-user-select: none;
                -ms-user-select: none;
                user-select: none;
                background-image: none;
                border: 1px solid transparent;">{{goTo}}</a>
         </div>
          
         

{{>footer}}

